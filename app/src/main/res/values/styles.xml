<resources>
    <!--  Base application theme.  -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--  Customize your theme here.  -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryDark">@color/darkTeal</item>
        <item name="colorAccent">@color/backgroundTeal</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="headerText" parent="viewParent">
        <item name="android:textColor">@color/darkTeal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginRegisterText" parent="parent">
        <item name="android:textSize">@dimen/loginTextSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/lightGrey</item>
    </style>

</resources>